{
  "name": "sudoku",
  "version": "1.0.0",
  "description": "A Sudoku puzzle game created with React, Redux and TypeScript.",
  "main": "built/sudoku.js",
  "types": "built/sudoku.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --exclude 'src/tests/*.{ts,tsx}'",
    "start": "webpack-dev-server",
    "test": "jest",
    "build": "tsc && webpack --progress",
    "clean": "rd /s/q built",
    "prepublish": "tsc && webpack --progress --config webpack.prod.config.js"
  },
  "author": "Chun Liu",
  "license": "GPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunliu/sudoku"
  },
  "dependencies": {
    "@types/bootstrap": "^3.3.33",
    "@types/lodash": "^4.14.64",
    "@types/react": "^15.0.23",
    "@types/react-bootstrap": "0.0.49",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.40",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "bootstrap": "^3.3.7",
    "lodash": "^4.17.4",
    "react": "^15.5.4",
    "react-bootstrap": "^0.31.0",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "styled-components": "^1.4.6",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.0",
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.18",
    "@types/react-hot-loader": "^3.0.1",
    "@types/redux-devtools-extension": "^2.13.0",
    "awesome-typescript-loader": "^3.1.2",
    "enzyme": "^2.8.2",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.0",
    "open-browser-webpack-plugin": "0.0.5",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-test-renderer": "^15.5.4",
    "redux-devtools-extension": "^2.13.2",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^20.0.0",
    "tslint": "^5.2.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.3.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
